

@{
    ViewBag.Title = "Home Page";
}
<div>
    <h1>Home page</h1>
    <p>
        @ViewBag.UserName
    </p>
</div>
<div class="RecipeSubmit">
    <p>
        To submit a new recipe: @Html.ActionLink("Click here", "New", "Recipe", null, new { @class = "btn btn-primary" })
    </p>

    <p>
        To view the list of every recipe: @Html.ActionLink("Click here", "index", "Community", null, new { @class = "btn btn-primary" })
    </p>

    <p>
        To view a list of all the users that have submitted recipes: @Html.ActionLink("Click here", "index", "Users", null, new { @class = "btn btn-primary" })
    </p>

</div>


