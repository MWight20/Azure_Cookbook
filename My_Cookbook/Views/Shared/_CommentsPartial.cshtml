@model My_Cookbook.ViewModels.CommentViewModel
<hr style="margin-top:-5px;" />
<div class="Comment-container" style="margin-top:20px;">
    
    @Html.BeginForm("Comment", "Recipe")
    { 
        <div class="comment-form">
            <div>@Html.HiddenFor(m => m.Id)</div>
            <div>@Html.HiddenFor(m => m.Recipe.Id)</div>
            <div class="form-group">
                @Html.LabelFor(m => m.Author)
                @Html.TextBoxFor(m => m.Author, new { Class = "comment-author" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Body)
                @Html.TextAreaFor(m => m.Body, new { Class = "comment-body"})
            </div>

            <Button type="submit" class="btn btn-primary">Submit</Button>
        </div>
    }
    
</div>
