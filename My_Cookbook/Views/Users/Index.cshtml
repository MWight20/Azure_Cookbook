@model My_Cookbook.ViewModels.UsersViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of users</h2>

<table id="recipes" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>username</th>
        </tr>
    </thead>
    <tbody>
        @foreach ( var users in Model.UsersList)
        {
            <tr>
                <td>@Html.ActionLink(users, "userrecipe", "users", new { username = users }, null) </td>
            </tr>
        }
    </tbody>
</table>